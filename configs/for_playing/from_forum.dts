/dts-v1/;
#include "at91sam9g25.dtsi"

/ {
        model = "Acme Systems Arietta G25";
        compatible = "acme,arietta", "atmel,at91sam9x5ek",
                "atmel,at91sam9x5", "atmel,at91sam9";

        aliases {
                serial0 = &dbgu;
/* switching next two serial assigments switches /dev/ttyS1 and ttyS2 */
                serial2 = &usart0;
                serial1 = &usart1;
                serial3 = &usart2;
        };

        chosen {
                bootargs = "console=ttyS0,115200n8 root=/dev/mmcblk0p2 rw rootwait";
        };

        memory {
                /* 128 MB Arietta G25 version */
                reg = <0x20000000 0x8000000>;
                /* 256 MB Arietta G25 version */
                /* reg = <0x20000000 0x10000000>; */
        };


        clocks {
                #address-cells = <1>;
                #size-cells = <1>;
                ranges;

                main_clock: clock@0 {
                        compatible = "atmel,osc", "fixed-clock";
                        clock-frequency = <12000000>;
                };

                slow_xtal {
                        clock-frequency = <32768>;
                };

                main_xtal {
                        clock-frequency = <12000000>;
                };

                sc16is7xx_ck: sc16is7xx_ck {
                        compatible = "fixed-clock";
                        #clock-cells = <0>;
                        clock-frequency = <14745600>;
                };

        };

        ahb {
                apb {
                        mmc0: mmc@f0008000 {
                                pinctrl-0 = <
                                  &pinctrl_mmc0_slot0_clk_cmd_dat0
                                  &pinctrl_mmc0_slot0_dat1_3>;
                                status = "okay";
                                slot@0 {
                                  reg = <0>;
                                  bus-width = <4>;
                                };
                        };

                        pinctrl@fffff400 {
                                pwm0 {
                                        pinctrl_pwm0: pwm0-0 {
                                        atmel,pins =
                                                <AT91_PIOB 11 AT91_PERIPH_B AT91_PINCTRL_NONE
                                                 AT91_PIOB 12 AT91_PERIPH_B AT91_PINCTRL_NONE
                                                 AT91_PIOB 13 AT91_PERIPH_B AT91_PINCTRL_NONE
                                                 AT91_PIOB 14 AT91_PERIPH_B AT91_PINCTRL_NONE>;
                                        };
                                };
                        };

                        pwm0: pwm@f8034000 {
                                status = "disabled";
                                pinctrl-names = "default";
                                pinctrl-0 = <&pinctrl_pwm0>;
                        };

                        i2c0: i2c@f8010000 {
                                status = "okay";
                                clock-frequency = <200000>;

                                sc16is750: sc16is750@51 {
                                        compatible = "nxp,sc16is750";
                                        reg = <0x4d>;
                                        /* clocks = <&twi0_clk>; */
                                        clocks = <&sc16is7xx_ck>;
                                        interrupts-extended = <&pioA 24 IRQ_TYPE_EDGE_FALLING>;
                                        /* gpio-controller; */
                                        /* #gpio-cells = <2>; */
                                };
                        };

                        i2c1: i2c@f8014000 {
                                status = "disabled";
                        };

                        /* /dev/ttyS1 */
                        usart0: serial@f801c000 {
                                status = "okay";
                                pinctrl-0 = <&pinctrl_usart0>;
                        };

                        /* /dev/ttyS2 */
                        usart1: serial@f8020000 {
                                status = "okay";
                                pinctrl-0 = <&pinctrl_usart1
                                        &pinctrl_usart1_rts
                                          &pinctrl_usart1_cts>;
                        };

                        /* /dev/ttyS3 */
                        usart2: serial@f8024000 {
                                status = "okay";
                                pinctrl-0 = <&pinctrl_usart2>;
                        };

                        spi1: spi@f0004000 {
                                status = "disabled";
                                cs-gpios = <&pioA 8 0>, <&pioA 0 0>, <&pioA 31 0>, <&pioA 30 0>;
                                device@0 {
                                        compatible = "spidev";
                                        spi-max-frequency = <5000000>;            // 5 MHz
                                        reg = <0>;
                                };
                                device@1 {
                                        compatible = "spidev";
                                        spi-max-frequency = <5000000>;            // 5 MHz
                                        reg = <1>;
                                };
                                device@2 {
                                        compatible = "spidev";
                                        spi-max-frequency = <5000000>;            // 5 MHz
                                        reg = <2>;
                                };
                                device@3 {
                                        compatible = "spidev";
                                        spi-max-frequency = <5000000>;            // 5 MHz
                                        reg = <3>;
                                };
                        };

                        usb2: gadget@f803c000 {
                                /* if gadget not status="okay" then USBA is host */
                                /* status = "okay"; */
                        };

                        adc0: adc@f804c000 {
                                status = "disabled";
                                atmel,adc-channels-used = <0xf>;
                                atmel,adc-num-channels = <4>;
                        };

                        dbgu: serial@fffff200 {
                                status = "okay";
                        };

                        pinctrl@fffff400 {
                                w1_0 {
                                        pinctrl_w1_0: w1_0-0 {
                                                atmel,pins = <AT91_PIOA 21 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP>;
                                        };
                                };
                        };

                        rtc@fffffeb0 {
                                status = "okay";
                        };

                        /* The watchdog is live when the SoC boots and can
                         * only be configured once! If the bootstrap has
                         * disabled it then it is unavailable. If still
                         * live when the kernel starts then you must choose
                         * status="okay" and then decide whether to use it
                         * on not. Uncomment 'atmel,disable;' as well to
                         * disable it. The default time is 15 seconds. */
                        watchdog@fffffe40 {
                                /* atmel,disable; */
                                /* timeout-sec = <14>; */
                                status = "okay";
                        };

                        shdwc@fffffe10 {
                                /* should only be changed to "okay" if VDDBU
                                 * is powered during shutdown, otherwise an
                                 * immediate reboot will occur. */
                                status = "disabled";
                        };
                };

                usb0: ohci@00600000 {
                        status = "okay";
                        num-ports = <3>;
                };

                usb1: ehci@00700000 {
                        status = "okay";
                };
        };

        leds {
                compatible = "gpio-leds";

                arietta_led {
                        label = "arietta_led";
                        gpios = <&pioB 8 GPIO_ACTIVE_HIGH>; /* PB8 */
                        linux,default-trigger = "heartbeat";
                };

        };
        w1_arietta {
                compatible = "w1-gpio";
                gpios = <&pioA 21 GPIO_ACTIVE_HIGH>;
                /* linux,open-drain; */
                pinctrl-names = "default";
                pinctrl-0 = <&pinctrl_w1_0>;
                status = "okay";
        };
}; 